<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.olliespage.Feedback"
    android:versionCode="129"
    android:versionName="3.0.0-beta" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.olliespage.Feedback.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.olliespage.Feedback.GLESGraphActivity"
            android:exported="true"
            android:label="@string/title_activity_glesgraph"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.olliespage.Feedback.GraphActivity"
            android:label="@string/title_activity_graph"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.olliespage.Feedback.ItemListActivity"
            android:label="@string/title_item_list" >
        </activity>
        <activity
            android:name="com.olliespage.Feedback.ItemDetailActivity"
            android:label="@string/title_item_detail"
            android:parentActivityName="com.olliespage.Feedback.ItemListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.olliespage.Feedback.ItemListActivity" />
        </activity>
    </application>

</manifest>